{
  "name": "express-app-boilerplate",
  "version": "1.0.0",
  "description": "A simple TS boilerplate for express apps - From Kent C Dodds article",
  "main": "index.ts",
  "engines": {
    "node": ">=12.18.2"
  },
  "scripts": {
    "start": "node .",
    "build": "babel --delete-dir-on-start --out-dir dist --copy-files --ignore \"**/__tests__/**,**/__mocks__/**\" --no-copy-ignored src --extensions \".ts,.tsx,.js\" ",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Emmax",
  "license": "ISC",
  "dependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "loglevel": "^1.6.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.23",
    "nodemon": "^2.0.4"
  }
}
